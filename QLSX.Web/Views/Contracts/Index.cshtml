@{
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="javascript:history.go(-1)">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">Quản lý đơn hàng</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Danh sách đơn hàng
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- HTML (DOM) sourced data -->
            <section id="html">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header" style="background: black;">
                                <ul class="list-inline mb-0">
                                    <li class="addnew">
                                        <a href="@Url.Action("Create","Contracts")" class="btn btn-info"><i class="fa fa-plus"></i>&nbsp;Thêm mới</a>
                                    </li>
                                </ul>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collpase show">
                                <div class="card-body card-dashboard">
                                    <table class="table table-striped table-bordered" id="dynamic-table">
                                        <thead>
                                            <tr>
                                                <th>Ngày bắt đầu</th>
                                                <th>Ngày kết thúc</th>
                                                <th>Mã đơn hàng</th>
                                                <th>Mã khách hàng</th>
                                                <th>Mô tả</th>
                                                <td>Chức năng</td>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Ngày bắt đầu</th>
                                                <th>Ngày kết thúc</th>
                                                <th>Mã đơn hàng</th>
                                                <th>Mã khách hàng</th>
                                                <th>Mô tả</th>
                                                <td>Chức năng</td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ HTML (DOM) sourced data -->
            <!--/ Javascript sourced data -->
        </div>
    </div>
</div>
<!-- END: Content-->
<script>
    $(document).ready(function () {
        $('#dynamic-table').DataTable({
            'ajax': {
                "type": "GET",
                "url": "@System.Configuration.ConfigurationManager.AppSettings["base_api"].ToString()contract/filter?customerid=&productid=",
                "dataSrc": function (json) {
                    var data = new Array();
                    for (var i = 0; i < json.Items.length; i++) {
                        data.push({
                            'StartDate': json.Items[i].StartDate,
                            'EndDate': json.Items[i].EndDate,
                            'Code': json.Items[i].Code,
                            'CustomerId': json.Items[i].Customer.Id,
                            'Description': json.Items[i].Description,
                            'Id': json.Items[i].Id
                        });
                    }
                    return data;
                },
                error: function () {
                    alert("Không truy xuất được dữ liệu!");
                }
            },
            "columns": [
                {
                    'data': 'StartDate',
                    "render": function (data) {
                        return moment(new Date(data)).format('DD/MM/YYYY');
                    }
                },
                { 'data': 'EndDate',
                    "render": function (data) {
                        return moment(new Date(data)).format('DD/MM/YYYY');
                    }
                },
                { 'data': 'Code' },
                { 'data': 'CustomerId' },
                { 'data': 'Description' },
                {
                    "sortable": false,
                    "data": function (data, type, row) {
                        var urledit = "@Url.Action("Create","Contracts")";
                        var urleditdetail = urledit + "/" + data.Id;
                        var urldelete = "@Url.Action("Delete","Contracts")";
                        var urldeletedetail = urldelete + "/" + data.Id;
                        var urldetail = "@Url.Action("ContractDetail","Contracts")";
                        var urldetail = urldetail + "/" + data.Id;
                        var btndetail = '<div class=\"btn-group mx-2\" role=\"group\" aria-label=\"Second Group\">  <a href="' +  urldetail + '" title="Chi tiết" class="btn btn-icon btn-outline-success"><i class="fa fa-info-circle"></i></a>';
                        var btnaddPc = ' <a href="' +  urleditdetail + '" title="Cập nhật" class="btn btn-icon btn-outline-warning"><i class="fa fa-edit"></i></a>';
                        var btndeletePc = ' <a href="' +  urldeletedetail + '" title="Xóa" class="btn btn-icon btn-outline-info"><i class="fa fa-trash"></i></a> </div>';
                        return ( btndetail  + btnaddPc  + btndeletePc  );
                    }
                }
            ]
        });
    });
</script>
