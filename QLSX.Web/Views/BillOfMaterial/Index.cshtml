@{
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="javascript:history.go(-1)">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">Quản lý định mức</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Danh sách định mức
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- HTML (DOM) sourced data -->
            <section id="html">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header" style="background: black;">
                                <ul class="list-inline mb-0">
                                    <li class="addnew">
                                        <a href="@Url.Action("Create","BillOfMaterial")" class="btn btn-info"><i class="fa fa-plus"></i>&nbsp;Thêm mới</a>
                                    </li>
                                </ul>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">

                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collpase show">
                                <div class="card-body card-dashboard">
                                    <table class="table table-striped table-bordered" id="dynamic-table">
                                        <thead>
                                            <tr>
                                                <th colspan="7">
                                                    <div class="form-group row last">
                                                        <label class="col-md-3 label-control" for="timesheetinput7">Loại vật tư</label>
                                                        <div class="form-group col-9 mb-2">
                                                            @*<label class="sr-only" for="issueinput6">Status</label>
                                                                @Html.DropDownListFor("CommodityType", Constant.CommodityTypes.dctCommdityTypes.Where(s => s.Key != Constant.CommodityTypes.Product).Select(n => new SelectListItem { Selected = n.Key == Model.CommodityType, Text = n.Value, Value = n.Key.ToString() }), new { @class = "form-control", @placeholder = "Chọn loại vật tư" })*@
                                                        </div>
                                                    </div>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>Mã thành phẩm</th>
                                                <th>Tên thành phẩm</th>
                                                <th>Mã định mức</th>
                                                <th>Tên định mức</th>
                                                <th>Ngày bắt đầu</th>
                                                <th>Mô tả</th>
                                                <td>Chức năng</td>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Mã thành phẩm</th>
                                                <th>Tên thành phẩm</th>
                                                <th>Mã định mức</th>
                                                <th>Tên định mức</th>
                                                <th>Ngày bắt đầu</th>
                                                <th>Mô tả</th>
                                                <td>Chức năng</td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ HTML (DOM) sourced data -->
            <!--/ Javascript sourced data -->
        </div>
    </div>
</div>
<!-- END: Content-->
<script>
    $(document).ready(function () {
        $('#dynamic-table').DataTable({
            'ajax': {
                "type": "GET",
                "url":  "@System.Configuration.ConfigurationManager.AppSettings["base_api"].ToString()BOM/Filter?productId=",
                "dataSrc": function (json) {
                    var data = new Array();
                    for (var i = 0; i < json.Items.length; i++) {
                        data.push({
                            
                            'ProductCode': json.Items[i].Product.Code,
                            'ProductName': json.Items[i].Product.Name,
                            'Code': json.Items[i].Code,
                            'Name': json.Items[i].Name,
                            'StartDate': json.Items[i].StartDate,
                            'Description': json.Items[i].Description,
                            'Id': json.Items[i].Id
                        });
                    }
                    return data;
                }
            },
            "columns": [
                { 'data': 'ProductCode' },
                { 'data': 'ProductName' },
                { 'data': 'Code' },
                { 'data': 'Name' },
                {
                    'data': 'StartDate',
                    "render": function (data) {                        
                        return moment(new Date(data)).format('DD/MM/YYYY');
                    }
                },
                { 'data': 'Description' },
                {
                    "sortable": false,
                    "data": function (data, type, row) {
                        var urledit = "@Url.Action("Create","BillOfMaterial")";
                        var urleditdetail = urledit + "/" + data.Id;
                        var urldelete = "@Url.Action("Delete","BillOfMaterial")";
                        var urldeletedetail = urldelete + "/" + data.Id;
                        var urldetail = "@Url.Action("BOMDetail","BillOfMaterial")";
                        var urldetail = urldetail + "/" + data.Id;
                        var btndetail = '<div class=\"btn-group mx-2\" role=\"group\" aria-label=\"Second Group\">  <a href="' +  urldetail + '" title="Chi tiết" class="btn btn-icon btn-outline-success"><i class="fa fa-info-circle"></i></a>';
                        var btnaddPc = ' <a href="' +  urleditdetail + '" title="Cập nhật" class="btn btn-icon btn-outline-warning"><i class="fa fa-edit"></i></a>';
                        var btndeletePc = ' <a href="' +  urldeletedetail + '" title="Xóa" class="btn btn-icon btn-outline-info"><i class="fa fa-trash"></i></a> </div>';
                        return ( btndetail  + btnaddPc  + btndeletePc  );
                    }
                },
            ]
        });
    });
</script>
