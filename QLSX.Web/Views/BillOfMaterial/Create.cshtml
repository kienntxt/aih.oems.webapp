                "url": "@System.Configuration.ConfigurationManager.AppSettings["base_api"].ToString()commodity/getbyid?id=@(@Model.Product?.Id)&getprices=true",
                "dataSrc": function (res) {
                    //console.log(json);
                    var data = new Array();
                    //for (var i = 0; i < json.Commodity.length; i++) {
                    data.push({
                        'ProductCode': res.Code,
                        'ProductName': res.Name,
                        'Amount': res["Prices"][0].Amount,
                        'StartDate': res["Prices"][0].StartDate,
                        'Description': res.Description,
                        'ProductId': res.Id
                    });
                    //}
                    return data;
                },
                "error": function () {
                    alert("Không truy xuất được dữ liệu Sản phẩm!");
                }
            },
            "columns": [
                { 'data': 'ProductCode' },
                { 'data': 'ProductName' },
                { 'data': 'Amount' },
                {
                    'data': 'StartDate',
                    "render": function (data) {
                        return moment(new Date(data)).format('DD/MM/YYYY');
                    }
