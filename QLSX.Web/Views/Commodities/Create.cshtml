                    var data = new Array();
                    for (var i = 0; i < json.Items.length; i++) {
                        data.push({
                            'PartnerName': json.Items[i].Vendor.Name,
                            'Amount': json.Items[i].Amount,
                            'StartDate': json.Items[i].StartDate,
                            'Description': json.Items[i].Description,
                            'PriceId': json.Items[i].Id
                        });
                    }
                    return data;
                },
                "error": function () {
                    alert("Không truy xuất được dữ liệu Giá!");
                }
            },
