        else {
            return false;
        }
    }

    function Delete(PriceId) {
        var url = '@Url.Content("~/")' + "Commodities/DeletePrice";
        $.post(url, { ID: PriceId }, function (data) {
            if (data == "Delete successfully") {
                alert(data);
                oTable = $('#prices-editable-table').DataTable();
                oTable.draw();
            }
            else {
                alert("Something Went Wrong!");
            }
        });
    }
</script>