@model OEMS.Web.Models.Partner
@{
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="javascript:history.go(-1)">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">Quản lý nhà cung cấp</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Thông tin chi tiết
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- HTML (DOM) sourced data -->
            <section id="html">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header" style="background: black;">
                                <ul class="list-inline mb-0">
                                    <li class="addnew">
                                        <a href="@Url.Action("Index","Partner")" class="btn btn-info"><i class="fa fa-arrow-left"></i>&nbsp; Quay lại</a>
                                    </li>
                                </ul>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">

                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collpase show">
                                <div class="card-body card-dashboard">
                                    <table class="table table-striped table-bordered" id="dynamic-table">
                                        <thead>
                                            <tr>
                                                <th>Tên nhà cung cấp</th>
                                                <th>Mã nhà cung cấp</th>
                                                <th>Loại nhà cung cấp</th>
                                                <th>Mô tả</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.Name</td>
                                                <td>@Model.Code</td>
                                                @if (@Model.Type.ToLower() == "vendor")
                                                {
                                                    <td>Nhà cung cấp</td>
                                                }
                                                else if (@Model.Type.ToLower() == "partner")
                                                {
                                                    <td>Nhà cung cấp - Khách hàng</td>
                                                }
                                                else
                                                {
                                                    <td>Khách hàng</td>
                                                }
                                                <td>@Model.Description</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ HTML (DOM) sourced data -->
            <!--/ Javascript sourced data -->
        </div>
    </div>
</div>
<!-- END: Content-->
