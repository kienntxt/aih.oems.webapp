@{
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="javascript:history.go(-1)">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">Quản lý nhà cung cấp</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Danh sách nhà cung cấp
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- HTML (DOM) sourced data -->
            <section id="html">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header" style="background: black;">
                                <ul class="list-inline mb-0">
                                    <li class="addnew">
                                        <a href="@Url.Action("Create","Partner")" class="btn btn-info"><i class="fa fa-plus"></i>&nbsp;Thêm mới</a>
                                    </li>
                                </ul>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">

                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collpase show">
                                <div class="card-body card-dashboard">
                                    <table class="table table-striped table-bordered" id="dynamic-table">
                                        <thead>
                                            <tr>
                                                <th>Tên nhà cung cấp</th>
                                                <th>Mã nhà cung cấp</th>
                                                <th>Loại nhà cung cấp</th>
                                                <th>Mô tả</th>
                                                <td>Chức năng </td>
                                            </tr>
                                        </thead>
                                        @*<tfoot>
                                            <tr>
                                                <th>Tên nhà cung cấp</th>
                                                <th>Mã nhà cung cấp</th>
                                                <th>Ngày tạo</th>
                                                <th>Ngày cập nhật</th>
                                                <td>Hành động </td>
                                            </tr>
                                        </tfoot>*@
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ HTML (DOM) sourced data -->
            <!--/ Javascript sourced data -->
        </div>
    </div>
</div>
<!-- END: Content-->
<script>
    $(document).ready(function () {
        $('#dynamic-table').DataTable({
            'ajax': {
                "type": "GET",
                "url": "http://113.160.87.222:9876/api/Partner/Filter?type=partner,vendor,customer",
                "dataSrc": function (json) {
                    var data = new Array();
                    for (var i = 0; i < json.Items.length; i++) {
                        data.push({
                            'Id': json.Items[i].Id,
                            'Code': json.Items[i].Name,
                            'Name': json.Items[i].Code,
                            'Type': json.Items[i].Type,
                            'Description': json.Items[i].Description,
                        });
                    }
                    return data;
                }
            },
            "columns": [
                { 'data': 'Code' },
                { 'data': 'Name' },
                { 'data': 'Type' },
                { 'data': 'Description' },
                {
                    "sortable": false,
                    "data": function (data, type, row) {
                        var urledit = "@Url.Action("Create","Partner")";
                        var urleditdeltail = urledit + "/" + data.Id;
                        var urldelete = "@Url.Action("Delete","Partner")";
                        var urldeletedeltail = urldelete + "/" + data.Id;
                        var urldetail = "@Url.Action("PartnerDetial","Partner")";
                        var urldeltail = urldetail + "/" + data.Id;
                        var btndetail = '<div class=\"btn-group mx-2\" role=\"group\" aria-label=\"Second Group\">  <a href="' +  urldeltail + '" title="Chi tiết" class="btn btn-icon btn-outline-success"><i class="fa fa-info-circle"></i></a>';
                        var btnaddPc = ' <a href="' +  urleditdeltail + '" title="Sửa" class="btn btn-icon btn-outline-warning"><i class="fa fa-gavel"></i></a>';
                        var btndeletePc = ' <a href="' +  urldeletedeltail + '" title="Xóa" class="btn btn-icon btn-outline-info"><i class="fa fa-recycle"></i></a> </div>';
                        return ( btndetail  + btnaddPc  + btndeletePc  );
                    }
                },
            ]
        });
    });
</script>
